NFL Schedule - Quadrant TRMNL Plugin (400Ã—240)
Works both locally and on TRMNL platform
{% endcomment %}

{% comment %} Try API first, fallback to local data {% endcomment %}
{% assign api_url = custom_fields.data_url | default: "https://site.api.espn.com/apis/site/v2/sports/football/nfl/scoreboard" %}
{% assign nfl_data = api_url | fetch_json %}
{% unless nfl_data and nfl_data.season %}
  {% assign nfl_data = site.data.schedule %}
{% endunless %}

{% if nfl_data and nfl_data.season and nfl_data.week %}
  {% assign season = nfl_data.season %}
  {% assign week = nfl_data.week %}
  {% assign events = nfl_data.events %}
  
  <div class="plugin">
    <h1 class="title">NFL W{{ week.number }}</h1>
    
    <div class="games">
      {% for event in events limit: 3 %}
        {% assign competition = event.competitions.first %}
        {% assign status = competition.status %}
        {% assign away_team = competition.competitors | where: 'homeAway', 'away' | first %}
        {% assign home_team = competition.competitors | where: 'homeAway', 'home' | first %}
        
        <div class="game-mini">
          <div class="teams">
            {{ away_team.team.abbreviation }} @ {{ home_team.team.abbreviation }}
          </div>
          <div class="time">{{ status.type.shortDetail }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
  
{% else %}
  <div class="plugin error">
    <h1 class="title">NFL</h1>
    <p>No data</p>
  </div>
{% endif %}

<style>
  .plugin {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    padding: 8px;
    color: #000;
    background: #fff;
    height: 100vh;
    overflow: hidden;
  }
  
  .title {
    font-size: 12px;
    font-weight: bold;
    margin: 0 0 8px 0;
    border-bottom: 1px solid #000;
    padding-bottom: 2px;
  }
  
  .games {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .game-mini {
    padding: 2px 0;
  }
  
  .teams {
    font-weight: bold;
    font-size: 9px;
    margin-bottom: 1px;
  }
  
  .time {
    font-size: 8px;
    color: #666;
  }
  
  .error {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
</style>