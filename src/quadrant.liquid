{% comment %}
NFL Schedule - Quadrant TRMNL Plugin
Uses webhook data pushed from GitHub Actions
{% endcomment %}

<div class="plugin quadrant">
  <h3 class="title">NFL Week {{ week.number }}</h3>
  {% assign first_game = events[0] %}
  {% if first_game %}
    {% assign competition = first_game.competitions[0] %}
    {% assign status = competition.status %}
    {% assign away_team = '' %}
    {% assign home_team = '' %}
    
    {% for competitor in competition.competitors %}
      {% if competitor.homeAway == 'away' %}
        {% assign away_team = competitor %}
      {% elsif competitor.homeAway == 'home' %}
        {% assign home_team = competitor %}
      {% endif %}
    {% endfor %}
    
    <div class="game">
      <div class="teams-mini">{{ away_team.team.abbreviation }} @ {{ home_team.team.abbreviation }}</div>
      {% if status.type.completed or status.type.state == 'in' %}
        <div class="score-big">
          <span class="score-num">{{ away_team.score }}</span>
          <span class="score-sep">-</span>
          <span class="score-num">{{ home_team.score }}</span>
        </div>
      {% endif %}
      <div class="status-mini">
        {% if status.type.state == 'in' %}ðŸ”´ LIVE{% elsif status.type.completed %}âœ“ FINAL{% else %}ðŸ“… {{ status.type.shortDetail }}{% endif %}
      </div>
    </div>
  {% endif %}
</div>

<style>
  .plugin.quadrant {
    font-family: system-ui, sans-serif;
    padding: 8px;
    height: 240px;
    width: 400px;
    overflow: hidden;
    text-align: center;
  }
  .title {
    font-size: 12px;
    font-weight: bold;
    margin: 0 0 6px 0;
  }
  .game {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: calc(100% - 20px);
    gap: 6px;
  }
  .teams-mini {
    font-size: 11px;
    font-weight: bold;
  }
  .score-big {
    display: flex;
    align-items: center;
    gap: 6px;
  }
  .score-num {
    font-size: 28px;
    font-weight: bold;
    background: #000;
    color: #fff;
    padding: 2px 10px;
    border-radius: 4px;
  }
  .score-sep {
    font-size: 20px;
    color: #999;
  }
  .status-mini {
    font-size: 9px;
    color: #666;
    font-weight: bold;
  }
</style>
