{% comment %}
NFL Schedule - Quadrant TRMNL Plugin
Uses webhook data pushed from GitHub Actions
{% endcomment %}

<div class="plugin quadrant">
  <h3 class="title">NFL Week {{ week.number }}</h3>
  {% assign first_game = events[0] %}
  {% if first_game %}
    {% assign competition = first_game.competitions[0] %}
    {% assign status = competition.status %}
    {% assign away_team = '' %}
    {% assign home_team = '' %}
    
    {% for competitor in competition.competitors %}
      {% if competitor.homeAway == 'away' %}
        {% assign away_team = competitor %}
      {% elsif competitor.homeAway == 'home' %}
        {% assign home_team = competitor %}
      {% endif %}
    {% endfor %}
    
    <div class="game {% if away_team.team.abbreviation == 'NE' or home_team.team.abbreviation == 'NE' %}favorite{% endif %}">
      <div class="teams-row">
        <img src="{{ away_team.team.logo }}" alt="{{ away_team.team.abbreviation }}" class="logo-quad">
        <span class="teams-mini">{{ away_team.team.abbreviation }} @ {{ home_team.team.abbreviation }}</span>
        <img src="{{ home_team.team.logo }}" alt="{{ home_team.team.abbreviation }}" class="logo-quad">
      </div>
      {% if status.type.completed or status.type.state == 'in' %}
        <div class="score-big">
          <span class="score-num">{{ away_team.score }}</span>
          <span class="score-sep">-</span>
          <span class="score-num">{{ home_team.score }}</span>
        </div>
      {% endif %}
      <div class="status-mini">
        {% if status.type.state == 'in' %}ðŸ”´ LIVE{% elsif status.type.completed %}âœ“ FINAL{% else %}ðŸ“… {{ status.type.shortDetail }}{% endif %}
      </div>
    </div>
  {% endif %}
</div>

<style>
  .plugin.quadrant {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    padding: 12px;
    height: 240px;
    width: 400px;
    overflow: hidden;
    text-align: center;
    background: #1E1E1E;
    color: #E0E0E0;
    display: flex;
    flex-direction: column;
  }
  .title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: #FFFFFF;
  }
  .game {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    gap: 10px;
    background: #282828;
    border-radius: 8px;
    padding: 12px;
  }
  .game.favorite {
    background: #303030;
    border: 1px solid #007AFF;
  }
  .teams-row {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .logo-quad {
    width: 32px;
    height: 32px;
    object-fit: contain;
  }
  .teams-mini {
    font-size: 14px;
    font-weight: 600;
    color: #FFFFFF;
  }
  .score-big {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .score-num {
    font-size: 32px;
    font-weight: bold;
    background: #007AFF;
    color: #fff;
    padding: 4px 12px;
    border-radius: 6px;
  }
  .score-sep {
    font-size: 24px;
    color: #9E9E9E;
  }
  .status-mini {
    font-size: 12px;
    color: #9E9E9E;
    font-weight: 600;
  }
</style>
