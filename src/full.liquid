{% comment %}
NFL Schedule - Full Size TRMNL Plugin
{% endcomment %}

<div class="plugin">
  <h1 class="title">
    NFL Week {{ merge_variables.week.number }} Â· {{ merge_variables.season.year }}
    ({{ merge_variables.season.type | replace: '2', 'Regular Season' | replace: '3', 'Playoffs' }})
  </h1>
  
  <div class="games">
    {% for event in merge_variables.events %}
    <div class="game-row">
      <div class="teams">
        {{ event.shortName }}
        {% if event.status.completed %}
          {% assign away = event.competitors | where: "homeAway", "away" | first %}
          {% assign home = event.competitors | where: "homeAway", "home" | first %}
          <span class="score">{{ away.score }}-{{ home.score }}</span>
          <span class="status">âœ“ FINAL</span>
        {% elsif event.status.state == "in" %}
          <span class="status">ðŸ”´ LIVE</span>
        {% else %}
          <span class="status">ðŸ“…</span>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<style>
  .plugin {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    padding: 16px;
    color: #E0E0E0;
    background: #1E1E1E;
    height: 100vh;
    overflow: hidden;
  }
  
  .title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 12px 0;
    border-bottom: 1px solid #444;
    padding-bottom: 4px;
    color: #FFFFFF;
  }
  
  .games {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .game-row {
    padding: 8px;
    border-radius: 6px;
    background: #282828;
  }
  
  .teams {
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 2px;
    color: #FFFFFF;
  }
  
  .score {
    display: inline-block;
    background: #000;
    color: #FFF;
    padding: 2px 6px;
    border-radius: 3px;
    margin: 0 4px;
    font-size: 13px;
  }
  
  .status {
    font-weight: normal;
    color: #9E9E9E;
    font-size: 12px;
  }
  
  .meta {
    font-size: 11px;
    color: #9E9E9E;
  }
</style>
