{% comment %}
NFL Schedule - Full Size TRMNL Plugin
Uses webhook data pushed from GitHub Actions
{% endcomment %}

<div class="plugin">
  <h1 class="title">
    NFL Week {{ week.number }} Â· {{ season.year }}
    {% if season.type == 2 %}(Regular Season){% elsif season.type == 3 %}(Playoffs){% endif %}
  </h1>
  
  <div class="games">
    {% for event in events limit:10 %}
      {% assign competition = event.competitions[0] %}
      {% assign status = competition.status %}
      {% assign away_team = '' %}
      {% assign home_team = '' %}
      
      {% for competitor in competition.competitors %}
        {% if competitor.homeAway == 'away' %}
          {% assign away_team = competitor %}
        {% elsif competitor.homeAway == 'home' %}
          {% assign home_team = competitor %}
        {% endif %}
      {% endfor %}
      
      <div class="game-row">
        <div class="teams">
          {% if status.type.completed and away_team.score and home_team.score %}
            {{ away_team.team.displayName }} {{ away_team.score }} - {{ home_team.score }} {{ home_team.team.displayName }}
          {% else %}
            {{ event.name }}
          {% endif %}
          <span class="status">({{ status.type.shortDetail }})</span>
        </div>
        <div class="meta">
          {{ competition.venue.fullName }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .plugin {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    padding: 14px;
    color: #000;
    background: #fff;
    height: 100vh;
    overflow: hidden;
  }
  
  .title {
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 10px 0;
    border-bottom: 2px solid #000;
    padding-bottom: 3px;
  }
  
  .games {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .game-row {
    padding: 5px 0;
    border-bottom: 1px solid #ddd;
  }
  
  .game-row:last-child {
    border-bottom: none;
  }
  
  .teams {
    font-weight: bold;
    font-size: 12px;
    margin-bottom: 1px;
  }
  
  .status {
    font-weight: normal;
    color: #666;
  }
  
  .meta {
    font-size: 10px;
    color: #666;
  }
</style>
