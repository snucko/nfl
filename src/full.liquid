{% comment %}
NFL Schedule - Full Size TRMNL Plugin
{% endcomment %}

<div class="plugin">
  <h1 class="title">
    NFL Week {{ week.number }} · {{ season.year }}
    ({{ season.type | replace: '2', 'Regular Season' | replace: '3', 'Playoffs' }})
  </h1>
  
  <div class="games">
    {% for event in events %}
    <div class="game-row">
      <div class="teams">{{ event.name }} <span class="status">({{ event.competitions[0].status.type.shortDetail }})</span></div>
      <div class="meta">{{ event.date | date: "%a %b %d, %l:%M %p" }} · {{ event.competitions[0].venue.fullName }}</div>
    </div>
    {% endfor %}
  </div>
</div>

<style>
  .plugin {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    padding: 16px;
    color: #E0E0E0;
    background: #1E1E1E;
    height: 100vh;
    overflow: hidden;
  }
  
  .title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 12px 0;
    border-bottom: 1px solid #444;
    padding-bottom: 4px;
    color: #FFFFFF;
  }
  
  .games {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .game-.row {
    padding: 8px;
    border-radius: 6px;
    background: #282828;
  }
  
  .teams {
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 2px;
    color: #FFFFFF;
  }
  
  .status {
    font-weight: normal;
    color: #9E9E9E;
  }
  
  .meta {
    font-size: 11px;
    color: #9E9E9E;
  }
</style>