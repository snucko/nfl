{% comment %}
NFL Schedule - Full Size TRMNL Plugin
Uses webhook data pushed from GitHub Actions
{% endcomment %}

<div class="plugin">
  <h1 class="title">
    NFL Week {{ week.number }} Â· {{ season.year }}
    {% if season.type == 2 %}(Regular Season){% elsif season.type == 3 %}(Playoffs){% endif %}
  </h1>
  
  <div class="games">
    {% for event in events limit:10 %}
      {% assign competition = event.competitions[0] %}
      {% assign status = competition.status %}
      {% assign away_team = '' %}
      {% assign home_team = '' %}
      
      {% for competitor in competition.competitors %}
        {% if competitor.homeAway == 'away' %}
          {% assign away_team = competitor %}
        {% elsif competitor.homeAway == 'home' %}
          {% assign home_team = competitor %}
        {% endif %}
      {% endfor %}
      
      <div class="game-row">
        <div class="matchup">
          <div class="teams-line">
            <span class="team away">
              <span class="team-abbr">{{ away_team.team.abbreviation }}</span>
              {% if status.type.completed or status.type.state == 'in' %}
                <span class="score">{{ away_team.score }}</span>
              {% endif %}
            </span>
            <span class="vs">@</span>
            <span class="team home">
              <span class="team-abbr">{{ home_team.team.abbreviation }}</span>
              {% if status.type.completed or status.type.state == 'in' %}
                <span class="score">{{ home_team.score }}</span>
              {% endif %}
            </span>
          </div>
          <div class="game-status">
            {% if status.type.state == 'in' %}
              <span class="live">ðŸ”´ LIVE</span> {{ status.type.shortDetail }}
            {% elsif status.type.completed %}
              âœ“ FINAL
            {% else %}
              ðŸ“… {{ status.type.shortDetail }}
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .plugin {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    padding: 14px;
    color: #000;
    background: #fff;
    height: 100vh;
    overflow: hidden;
  }
  
  .title {
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 10px 0;
    border-bottom: 2px solid #000;
    padding-bottom: 3px;
  }
  
  .games {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .game-row {
    padding: 6px 0;
    border-bottom: 1px solid #ddd;
  }
  
  .game-row:last-child {
    border-bottom: none;
  }
  
  .matchup {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  
  .teams-line {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
  }
  
  .team {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  .team-abbr {
    font-weight: bold;
    min-width: 30px;
  }
  
  .score {
    font-weight: bold;
    font-size: 14px;
    background: #000;
    color: #fff;
    padding: 1px 6px;
    border-radius: 3px;
  }
  
  .vs {
    color: #999;
    font-size: 10px;
  }
  
  .game-status {
    font-size: 9px;
    color: #666;
  }
  
  .live {
    color: #c00;
    font-weight: bold;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
</style>
