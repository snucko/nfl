{% comment %}
NFL Schedule - Half Horizontal TRMNL Plugin
Uses webhook data pushed from GitHub Actions
{% endcomment %}

<div class="plugin half-horizontal">
  <h2 class="title">NFL Week {{ week.number }}</h2>
  <div class="games">
    {% for event in events limit:4 %}
      {% assign competition = event.competitions[0] %}
      {% assign status = competition.status %}
      {% assign away_team = '' %}
      {% assign home_team = '' %}
      
      {% for competitor in competition.competitors %}
        {% if competitor.homeAway == 'away' %}
          {% assign away_team = competitor %}
        {% elsif competitor.homeAway == 'home' %}
          {% assign home_team = competitor %}
        {% endif %}
      {% endfor %}
      
      <div class="game-row">
        <div class="teams-compact">
          {% if status.type.completed and away_team.score and home_team.score %}
            {{ away_team.team.abbreviation }} {{ away_team.score }} - {{ home_team.score }} {{ home_team.team.abbreviation }}
          {% else %}
            {{ event.shortName }}
          {% endif %}
        </div>
        <div class="meta-compact">{{ status.type.shortDetail }}</div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .plugin.half-horizontal {
    font-family: system-ui, sans-serif;
    padding: 10px;
    height: 240px;
    width: 800px;
    overflow: hidden;
  }
  .title {
    font-size: 13px;
    font-weight: bold;
    margin: 0 0 6px 0;
    border-bottom: 1px solid #000;
    padding-bottom: 3px;
  }
  .game-row {
    padding: 5px 0;
    margin-bottom: 3px;
  }
  .teams-compact {
    font-weight: bold;
    font-size: 11px;
    margin-bottom: 1px;
  }
  .meta-compact {
    font-size: 9px;
    color: #666;
  }
</style>
