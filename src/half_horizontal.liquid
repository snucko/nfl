{% comment %}
NFL Schedule - Half Horizontal TRMNL Plugin
Uses webhook data pushed from GitHub Actions
{% endcomment %}

<div class="plugin half-horizontal">
  <h2 class="title">NFL Week {{ week.number }}</h2>
  <div class="games">
    {% for event in events limit:4 %}
      {% assign competition = event.competitions[0] %}
      {% assign status = competition.status %}
      {% assign away_team = '' %}
      {% assign home_team = '' %}
      
      {% for competitor in competition.competitors %}
        {% if competitor.homeAway == 'away' %}
          {% assign away_team = competitor %}
        {% elsif competitor.homeAway == 'home' %}
          {% assign home_team = competitor %}
        {% endif %}
      {% endfor %}
      
      <div class="game-row {% if away_team.team.abbreviation == 'NE' or home_team.team.abbreviation == 'NE' %}favorite{% endif %}">
        <div class="teams-compact">
          <img src="{{ away_team.team.logo }}" alt="{{ away_team.team.abbreviation }}" class="logo-small">
          <span class="team-abbr">{{ away_team.team.abbreviation }}</span>
          {% if status.type.completed or status.type.state == 'in' %}
            <span class="score-small">{{ away_team.score }}</span>
          {% endif %}
          <span class="vs-small">@</span>
          <img src="{{ home_team.team.logo }}" alt="{{ home_team.team.abbreviation }}" class="logo-small">
          <span class="team-abbr">{{ home_team.team.abbreviation }}</span>
          {% if status.type.completed or status.type.state == 'in' %}
            <span class="score-small">{{ home_team.score }}</span>
          {% endif %}
        </div>
        <div class="meta-compact">
          {% if status.type.state == 'in' %}ðŸ”´{% elsif status.type.completed %}âœ“{% else %}ðŸ“…{% endif %} {{ status.type.shortDetail }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .plugin.half-horizontal {
    font-family: system-ui, sans-serif;
    padding: 10px;
    height: 240px;
    width: 800px;
    overflow: hidden;
  }
  .title {
    font-size: 13px;
    font-weight: bold;
    margin: 0 0 6px 0;
    border-bottom: 1px solid #000;
    padding-bottom: 3px;
  }
  .game-row {
    padding: 5px 0;
    margin-bottom: 3px;
  }
  .game-row.favorite {
    background: #f0f0f0;
    margin: 0 -10px 3px -10px;
    padding: 5px 10px;
    border-left: 3px solid #000;
  }
  .teams-compact {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 11px;
    margin-bottom: 1px;
  }
  .logo-small {
    width: 16px;
    height: 16px;
    object-fit: contain;
  }
  .team-abbr {
    font-weight: bold;
  }
  .score-small {
    font-weight: bold;
    background: #000;
    color: #fff;
    padding: 0px 4px;
    border-radius: 2px;
    font-size: 10px;
  }
  .vs-small {
    color: #999;
    font-size: 9px;
  }
  .meta-compact {
    font-size: 9px;
    color: #666;
  }
</style>
