{% comment %}
NFL Schedule - Half Horizontal TRMNL Plugin (800×240)
Works both locally and on TRMNL platform
{% endcomment %}

{% comment %} Try API first, fallback to local data {% endcomment %}
{% assign api_url = custom_fields.data_url | default: "https://site.api.espn.com/apis/site/v2/sports/football/nfl/scoreboard" %}
{% assign nfl_data = api_url | fetch_json %}
{% unless nfl_data and nfl_data.season %}
  {% assign nfl_data = site.data.schedule %}
{% endunless %}

{% if nfl_data and nfl_data.season and nfl_data.week %}
  {% assign season = nfl_data.season %}
  {% assign week = nfl_data.week %}
  {% assign events = nfl_data.events %}
  
  <div class="plugin">
    <h1 class="title">
      NFL Week {{ week.number }} · {{ season.year }}
    </h1>
    
    <div class="games">
      {% for event in events limit: 6 %}
        {% assign competition = event.competitions.first %}
        {% assign status = competition.status %}
        {% assign away_team = competition.competitors | where: 'homeAway', 'away' | first %}
        {% assign home_team = competition.competitors | where: 'homeAway', 'home' | first %}
        
        <div class="game-compact">
          <div class="matchup">
            {% if status.type.completed and away_team.score and home_team.score %}
              {{ away_team.team.abbreviation }} {{ away_team.score }}-{{ home_team.score }} {{ home_team.team.abbreviation }}
            {% else %}
              {{ away_team.team.abbreviation }} @ {{ home_team.team.abbreviation }}
            {% endif %}
          </div>
          <div class="time">{{ status.type.shortDetail }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
  
{% else %}
  <div class="plugin error">
    <h1 class="title">NFL Schedule</h1>
    <p>Unable to load data</p>
  </div>
{% endif %}

<style>
  .plugin {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    padding: 12px;
    color: #000;
    background: #fff;
    height: 100vh;
    overflow: hidden;
  }
  
  .title {
    font-size: 14px;
    font-weight: bold;
    margin: 0 0 8px 0;
    border-bottom: 1px solid #000;
    padding-bottom: 2px;
  }
  
  .games {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
  }
  
  .game-compact {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  
  .matchup {
    font-weight: bold;
    font-size: 11px;
  }
  
  .time {
    font-size: 9px;
    color: #666;
  }
  
  .error {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
</style>
